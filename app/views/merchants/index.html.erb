<section class="heading">
<h1 class="page_title">Merchants</h1>
<br />
</section>
<table class="table table-hover table-sm" frame = "box" id="merchant_index">
<thead>
<tr>
<th> PHOTO</th>
<th> USERNAME </th>
<th> AVERAGE RATING </th>
<th> ACTIVE PRODUCTS </th>
</tr>
</thead>
  <% @merchants.each do |merchant|  %>
  <tr>
    <td class="cell_center">
      <% if merchant.uid < 100000 %>
        <%= image_tag "https://avatars1.githubusercontent.com/u/0", alt: "Anonymous profile photo" %>
      <% else %>
        <%= image_tag "https://avatars1.githubusercontent.com/u/#{merchant.uid}", alt: "github profile photo" %>
      <% end %>
    </td>
    <td class="cell_center"><%= link_to merchant.username, merchant_path(merchant.id) %></td>
    <% if merchant.calculate_average_rating != nil %>
    <td class="cell_center"><%= merchant.calculate_average_rating %></td>
    <% else%>
    <td class="cell_center">No Reviews</td>
    <% end %>
    <td class="cell_center"><%= merchant.active_products %></td>
  </tr>
  <% end %>
</table>
